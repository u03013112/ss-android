<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.AppCompat.Light"
        android:elevation="0dp"
        >
        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/porn_light_gray"
            android:padding="5dp"
            >
            <Button
                android:id="@+id/ad_button"
                android:backgroundTint="@color/gray_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="观看广告获取100MB流量"
                android:textSize="14sp"
                android:textColor="@color/porn_orange"
                android:layout_weight="5"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/zanzhu_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="我不要赞助"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:backgroundTint="@color/porn_orange"
                android:layout_weight="3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/porn_dark_gray"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <TextView
                    android:id="@+id/version_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本v1.0.0"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/netflow_speed_textView"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textSize="14sp"
                    android:text="▲   0\n▼   0"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    >flow</TextView>

                <ImageButton
                    android:id="@+id/connect_button_new"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:background="@drawable/round"
                    android:backgroundTint="@color/porn_orange"
                    android:padding="10dp"
                    android:src="@drawable/ic_close" />
                <TextView
                    android:id="@+id/netflow_use_textView"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text=""
                    android:gravity="right"
                    android:textColor="@color/white"
                    >flow</TextView>
            </LinearLayout>
            <Button
                android:id="@+id/op_button"
                android:layout_marginHorizontal="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/red"
                android:visibility="gone"
                android:backgroundTint="@color/yellow" />
            <Button
                android:id="@+id/status_button"
                android:layout_marginHorizontal="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="状态：正在初始化，请稍后"
                android:textSize="14sp"
                android:textColor="@color/porn_orange"
                android:backgroundTint="@color/white" />
        </LinearLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"/>
    </com.google.android.material.appbar.AppBarLayout>

</LinearLayout>